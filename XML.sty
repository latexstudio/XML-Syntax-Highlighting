% XML/DTD Syntax Highlighting
% based on https://tex.stackexchange.com/questions/10255/xml-syntax-highlighting
% customized by Stefan Schöberl

\usepackage{listings}
\usepackage{courier}
\lstset{showspaces=false}
\lstset{breaklines=true}
\lstset{showstringspaces=false}
\lstset{literate={ä}{{\"a}}1{Ä}{{\"A}}1{ö}{{\"o}}1{Ö}{{\"O}}1{ü}{{\"u}}1{Ü}{{\"U}}1{ß}{\ss}1}
\lstset{tabsize=2}

\usepackage{color}
\definecolor{mygray}{rgb}{0.5,0.5,0.5}

\definecolor{maroon}{rgb}{0.5, 0, 0}
\definecolor{olive}{rgb}{0.33, 0.42, 0.18}

\lstset{
		numbers=left,
		numbersep=10pt,
		numberstyle=\tiny\color{mygray},
		frame=single,
 		basicstyle=\ttfamily
}

\lstdefinelanguage{XML}{
 		alsoletter={-},
 		morestring=[s]{"}{"},
 		morestring=[s]{'}{'},
 		morecomment=[s]{<!}{>},
		morecomment=[s]{<?}{?>},
		morecomment=[s]{!--}{--},
		commentstyle=\color{olive},
		moredelim=[s][\color{black}]{>}{<},
		moredelim=[s][\color{red}]{\ }{=},
		stringstyle=\color{blue},
		identifierstyle=\bfseries\color{maroon}
}

\lstdefinelanguage{DTD}{
 		alsoletter={-},
 		morestring=[s]{"}{"},
 		morestring=[s]{'}{'},
 		morecomment=[s]{<!}{>},
		morecomment=[s]{<?}{?>},
		morecomment=[s]{!--}{--},
		commentstyle=\color{olive},
		moredelim=[s][\color{black}]{>}{<},
		moredelim=[s][\color{red}]{\ }{=},
		stringstyle=\color{blue},
		moredelim=[s][\color{maroon}]{<!ELEMENT}{>},
		moredelim=[s][\color{blue}]{<!ATTLIST}{>},
		identifierstyle=\bfseries\color{maroon}
}
